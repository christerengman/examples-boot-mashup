<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:citrus="http://www.citrusframework.org/schema/config"
	xmlns:citrus-http="http://www.citrusframework.org/schema/http/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.citrusframework.org/schema/config http://www.citrusframework.org/schema/config/citrus-config.xsd
    http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd">

	<!-- Test client -->
	<citrus-http:client id="restClient" request-url="http://localhost:8080" />

	<!-- MusicBeanz simulator -->
	<citrus-http:server id="mbServer" port="8081"
		auto-start="true" timeout="5000"/>

	<!-- Wikipedia simulator -->
	<citrus-http:server id="wpServer" port="8082"
		auto-start="true" />

	<!-- Cover Art Archive simulator -->
	<citrus-http:server id="caaServer" port="8083"
		auto-start="true" />
</beans>